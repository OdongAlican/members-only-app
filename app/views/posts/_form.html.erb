<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<% if member_signed_in? %>
  <div class="field">
    <div class="control">
      <%= f.input :body, label: "Post About it", input_html: { class: "textarea" }, wrapper: false, 
        label_html: {class: "label"}, placeholder: "Compose a new Post ...." %>
    </div>
  </div>
  
  <%= f.button :submit, class: "button is-light is-inverted" %>
<% end %>
<% end %>